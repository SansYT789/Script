local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/refs/heads/main/Example.lua"))()
-- Note: the docs refer to WindUI up to v1.6.41, so adjust accordingly

local Window = WindUI:CreateWindow({
    Title = "MangoHub",
    Author = "Made By Group Vinreach",
    Folder = "Mango",
    Size = UDim2.new(0, 350, 0, 300),
    Theme = "dark",
    Icon = "airplay"
})

local MainTab = Window:Tab({
    Title = "Main",
    Icon = "house",
    Locked = false
})

local OtherTab = Window:Tab({
    Title = "Other",
    Icon = "settings",
    Locked = false
})

-- Main tab
MainTab:Label({ Title = "Version: 1.0 [ Demo ]" })
MainTab:Label({ Title = "Discord: https://discord.com/krnl" })

local AntiAFK_Toggle = MainTab:Toggle({
    Title = "Anti AFK",
    Desc = "Toggle anti-idle protection",
    Default = false,
    Callback = function(val)
        if val then
            local vu = game:GetService("VirtualUser")
            game:GetService("Players").LocalPlayer.Idled:Connect(function()
                vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
                task.wait(1)
                vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
            end)
            print("Anti AFK Enabled")
        else
            print("Anti AFK Disabled")
            -- Note: can't easily disconnect, but flipping off means ignore
        end
    end
})

-- Other tab
OtherTab:Dropdown({
    Title = "ESP",
    Desc = "Expand to access",
    Values = {"Soon"},
    Multi = false,
    Callback = function(value)
        Window:Notification({
            Title = "ESP",
            Text = "Feature coming soon!",
            Duration = 3
        })
    end
})

OtherTab:Input({
    Title = "Custom Command",
    Placeholder = "Type command here...",
    Callback = function(text)
        print("Input typed:", text)
    end
})