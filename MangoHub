--// Nh√∫ng WindUI t·ª´ GitHub
local WindUI_URL = "https://raw.githubusercontent.com/RoyRedRedVN/Library-Ui-For-Script-Hacking/refs/heads/main/windui.lua"
local WindUI = loadstring(game:HttpGet(WindUI_URL))()

--// Kh·ªüi t·∫°o c·ª≠a s·ªï ch√≠nh (nh·ªè g·ªçn, d·ªÖ k√©o)
local Window = WindUI:CreateWindow({
    Name = "MangoHub",  -- T√™n c·ª≠a s·ªï UI
    Theme = "Dark",
    Size = UDim2.fromOffset(400, 300), -- v·ª´a ƒë·ªß k√©o
    Position = UDim2.fromScale(0.5, 0.5), -- lu√¥n center
    AnchorPoint = Vector2.new(0.5, 0.5) -- fix center anchor
})

--// T·∫°o tab ch√≠nh
local MainTab = Window:CreateTab("Main")

--// T·∫°o label th√¥ng tin
MainTab:CreateLabel("Made by RoyRedRed")

--// T·∫°o toggle v√≠ d·ª•
MainTab:CreateToggle({
    Name = "Example Toggle",
    Default = false,
    Callback = function(state)
        print("Toggle state:", state)
    end
})