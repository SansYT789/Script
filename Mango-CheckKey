-- üü£ MangoHub - Key ‚Üí CheckGame (English Test Version)

--// Load WindUI
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua")))()

--// Create Window with KeySystem
local Window = WindUI:CreateWindow({
    Title = "MangoHub",
    Icon = "key",
    Author = ".ftgs",
    Folder = "MangoHub",
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark",
    Transparent = true,

    KeySystem = { 
        Key = { "1234", "5678" }, -- Example keys
        Note = "Enter the correct key to unlock MangoHub.",
        SaveKey = true, -- ‚úÖ auto save & load key

        Callback = function(validKey)
            if validKey then
                -- Notify user
                WindUI:Notify({
                    Title = "MangoHub",
                    Content = "‚úÖ Key Accepted! Loading Mango-CheckGame...",
                    Duration = 4,
                    Icon = "check"
                })

                -- Destroy key UI
                Window:Destroy()

                -- Load Mango-CheckGame
                loadstring(game:HttpGet("https://raw.githubusercontent.com/RoyRedRedVN/Script/refs/heads/main/Mango-CheckGame"))()
            else
                WindUI:Notify({
                    Title = "MangoHub",
                    Content = "‚ùå Invalid Key. Try again.",
                    Duration = 4,
                    Icon = "x"
                })
            end
        end,
    },
})