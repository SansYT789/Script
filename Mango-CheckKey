--// Load WindUI
local WindUI_URL = "https://raw.githubusercontent.com/RoyRedRedVN/Library-Ui-For-Script-Hacking/refs/heads/main/windui.lua"
local WindUI = loadstring(game:HttpGet(WindUI_URL))()

--// Create MangoHub Window
local localWindow = WindUI:CreateWindow({
    Title = "MangoHub",
    Theme = "Dark",
    Size = UDim2.fromOffset(400, 300),
    Position = UDim2.fromScale(0.5, 0.5),
    AnchorPoint = Vector2.new(0.5, 0.5),
    Resizable = true,

    -- âœ… KeySystem Config
    KeySystem = {
        Key = { "MangoVIP", "RedVIP" },
        Note = "Enter your VIP key to unlock MangoHub!",
        SaveKey = true, -- save & auto load key
        URL = "https://discord.gg/yourlink" -- change to your key link
    }
})

--// Main Tab
local localMainTab = localWindow:CreateTab("Main")

--// Info Label
localMainTab:CreateLabel("Made by RoyRedRed")

--// Example Toggle
localMainTab:CreateToggle({
    Name = "Example Toggle",
    Default = false,
    Callback = function(state)
        print("Toggle state:", state)
    end
})

--// Auto loader after key verified
local function LoadMangoScript()
    WindUI:Notify({
        Title = "MangoHub",
        Content = "âœ… Key accepted! Loading Mango-CheckGame...",
        Duration = 3,
        Color = Color3.fromRGB(255,165,0)
    })
    task.delay(1, function()
        local success, err = pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/RoyRedRedVN/Script/refs/heads/main/Mango-CheckGame"))()
        end)
        if not success then
            warn("MangoHub Loader Error: " .. tostring(err))
        end
    end)
end

--// Detect if key loaded from SaveKey
task.delay(0.5, function()
    WindUI:Notify({
        Title = "MangoHub",
        Content = "ðŸ”‘ Key loaded from Save!",
        Duration = 3,
        Color = Color3.fromRGB(100, 200, 100)
    })
    LoadMangoScript()
end)