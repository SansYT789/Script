-- Load WindUI (the latest)
local WindUILib = loadstring(game:HttpGet("https://raw.githubusercontent.com/RoyRedRedVN/Library-Ui-For-Script-Hacking/refs/heads/main/windui.lua"))()

-- Create Window MangoHub
local localWindow = WindUILib:CreateWindow({
    Title = "üçë MangoHub",
    Center = true,
    AutoShow = true
})

-- Create Main Tab
local localMainTab = localWindow:CreateTab("Main")

-- Set Mango Theme
WindUILib:SetThemeColor(Color3.fromRGB(255, 165, 0)) -- mango color

-- Valid Key
local localValidKey = "MangoVIP"

-- Create Section for Get Key
local localSection = localMainTab:CreateSection("Get Key")

-- Create TextBox for Key Input
local localKeyBox = localSection:CreateTextBox({
    Name = "Enter Key",
    Placeholder = "Enter your key...",
    Callback = function(value)
        print("User entered key: " .. value)
    end
})

-- Submit Button
localSection:CreateButton({
    Name = "Submit Key",
    Callback = function()
        local localEnteredKey = localKeyBox:GetValue()
        if localEnteredKey == localValidKey then
            WindUILib:Notify({
                Title = "MangoHub",
                Content = "‚úÖ Valid key! Welcome to MangoHub!",
                Duration = 3,
                Color = Color3.fromRGB(255, 165, 0)
            })
            print("User entered a valid key: " .. localEnteredKey)
        else
            WindUILib:Notify({
                Title = "MangoHub",
                Content = "‚ùå Invalid key! Try again.",
                Duration = 3,
                Color = Color3.fromRGB(255, 0, 0)
            })
            print("User entered an invalid key: " .. localEnteredKey)
        end
    end
})