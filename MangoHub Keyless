-- Load WindUI
local WindUILibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/RoyRedRedVN/Library-Ui-For-Script-Hacking/refs/heads/main/windui.lua"))()

-- Create Window
local localWindow = WindUILibrary:CreateWindow("MangoHub")

-- Create Main Tab
local localMainTab = localWindow:CreateTab("Main")

-- Set Theme Color (Mango)
WindUILibrary:SetThemeColor(Color3.fromRGB(255, 165, 0))

-- Valid Key
local localValidKey = "MangoVIP"

-- Create Section
local localSection = localMainTab:CreateSection("Get Key")

-- Create TextBox for Key Input
local localKeyBox = localSection:CreateTextBox({
    Name = "Enter Key",
    Placeholder = "Enter your key...",
    Callback = function(value)
        print("User entered key: " .. value)
    end
})

-- Create Submit Button
localSection:CreateButton({
    Name = "Submit Key",
    Callback = function()
        local localEnteredKey = localKeyBox:GetValue()
        if localEnteredKey == localValidKey then
            WindUILibrary:Notify("✅ Valid key! Welcome to MangoHub!", 3, Color3.fromRGB(255, 165, 0))
            print("User entered a valid key: " .. localEnteredKey)
        else
            WindUILibrary:Notify("❌ Invalid key! Try again.", 3, Color3.fromRGB(255, 0, 0))
            print("User entered an invalid key: " .. localEnteredKey)
        end
    end
})